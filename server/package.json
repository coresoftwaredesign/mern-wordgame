    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "connect-livereload": "^0.6.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "livereload": "^0.9.3",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-jest-mocker": "^1.0.0",
    "ts-node": "^10.9.2"
